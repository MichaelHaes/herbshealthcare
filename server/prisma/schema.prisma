// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Devices {
  device_id   Int       @id @default(autoincrement())
  pot_number  Int
  user_id     Int
  createdAt   DateTime  @default(now())

  sensors     SensorData[]
  // users       User[]
  User        User?   @relation(fields: [user_id], references: [user_id])

  @@map("devices")
}

model SensorData {
  sensor_id   Int       @id @default(autoincrement()) @unique
  device_id   Int?       
  createdAt   DateTime  @default(now())
  humidity    String    
  luminosity  String    
  waterLevel  String

  Devices     Devices?   @relation(fields: [device_id], references: [device_id])
  @@map("sensor_data")
}

model User {
  user_id     Int       @id @default(autoincrement())
  device_id   Int?
  name        String     
  createdAt   DateTime? @default(now())
  email       String    @unique
  password    String    

  // Devices     Devices?   @relation(fields: [device_id], references: [device_id])
  devices     Devices[]
  @@map("user")
}

model Session {
  id          Int      @id @default(autoincrement())
  session_id  String   @unique
  data        Json
  expires     DateTime
}